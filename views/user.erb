<h1> What's on your mind <%=@user.user_handle%>? </h1>

<h5> WRITE A POST </h5>
<form action='/user' method='post'>
  <textarea class='write-post' name="content" rows="5" cols="30" maxlength='280' placeholder="Maximum length: 280 characters" required></textarea> <br>
  <input class='start-btn submit' id='post' type='submit' value='DROP SCIENCE'>
</form>

<h2>Your thoughts...</h2>

<ul>
  <% @peeps.each do |peep| %>
    <% if peep.user.user_id == @user.user_id %>
      <div class="cloud">
        <li class="content">
          <strong> <%= peep.content %> <br></strong>
          <small>
            <%= peep.user.user_handle%> <br>
            <%= peep.user.user_name%> <br>
            <%= peep.created_at.strftime('%d %b %Y %H:%M') %> <br>
            <form class="inline" action="/post/<%=peep.id%>/edit" method="get">
              <input class="btn btn-secondary btn-sm" type="submit" value="Edit">
            </form>
            <form class="inline" action="/post/<%=peep.id%>" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <input class="btn btn-secondary btn-sm" type="submit" value="Delete">
            </form>
          </small>
        </li>
      </div>
    <% end %>
  <% end%>
</ul>
